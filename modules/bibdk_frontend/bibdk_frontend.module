  $files = drupal_system_listing('/\.inc$/', $path, 'name', 0);
  foreach ($files as $file) {
    include $file->uri; // no not use include_once(). hook_default_page_manager_pages() is called twice.
    $pages[$page->name] = $page;
  }

  return $pages;
}


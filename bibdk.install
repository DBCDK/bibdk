/**
 * Increase timeout before logging out ding users to 2 hours if value not set.
 */
function bibdk_update_7004(&$sandbox) {
  $lifetime = variable_get('ding_user_creds_lifetime');

  if (empty($lifetime)) {
    variable_set('ding_user_creds_lifetime', 7200);
  }
}

